<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape android:shape="oval">
            <gradient android:angle="-90" android:endColor="#aea0a0" android:startColor="#523737" />

            <stroke android:width="2dp" android:color="#080808" />
        </shape></item>
    <item android:state_focused="true"><shape android:shape="oval">
            <solid android:color="#d3d8c2" />

            <stroke android:width="2dp" android:color="#080808" />
        </shape></item>
    <item><shape android:shape="oval">
            <gradient android:angle="-90" android:endColor="#aea0a0" android:startColor="#523737" />

            <stroke android:width="2dp" android:color="#080808" />
        </shape></item>

</selector>